let path = ["1"];

function render() {
  const id = path[path.length - 1];
  const sec = story[id];
  document.getElementById("section-title").textContent = sec.t;
  document.getElementById("section-text").textContent = sec.x;
  const ch = document.getElementById("choices");
  ch.innerHTML = "";
  sec.c.forEach(([label, to]) => {
    const btn = document.createElement("button");
    btn.textContent = label;
    btn.onclick = () => { path.push(to); render(); };
    ch.appendChild(btn);
  });
  const ending = document.getElementById("ending");
  if (!sec.c.length) {
    ending.style.display = "block";
    ending.textContent = `Bir sona ulaştınız. Toplam ${Object.values(story).filter(s=>!s.c.length).length} farklı son vardır.`;
  } else {
    ending.style.display = "none";
  }
  const trail = document.getElementById("trail");
  trail.innerHTML = "";
  path.forEach((pid, i) => {
    const btn = document.createElement("button");
    btn.textContent = `${i+1}. ${story[pid].t.split(" — ")[0]}`;
    btn.onclick = () => { path = path.slice(0, i+1); render(); };
    trail.appendChild(btn);
  });
}
render();
</script>

